<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.stunnel</string>

    <key>stunnel</key>
    <dict>
      <key>Description</key>
      <string>A service for tunneling connections over SSL.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "stunnel::config::executable" %></string>
      <string><%= scope.lookupvar "stunnel::config::configfile" %></string>
    </array>


    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <dict>
      <key>NetworkState</key>
      <true/>
    </dict>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "stunnel::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "stunnel::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "stunnel::config::logdir" %>/console.log</string>
</dict>
</plist>
